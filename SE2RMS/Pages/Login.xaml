<Page x:Class="SE2RMS.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SE2RMS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Login">

    <StackPanel Background="#ade1ee">
        <TextBlock Text="Login" FontFamily="Segoe UI Bold" HorizontalAlignment="Center" FontSize="26" Margin="0, 50, 0, 0"/>
        <TextBlock Text="User Name:" HorizontalAlignment="Left" Margin="50, 100, 0, 0" FontFamily="Segoe UI Bold"/>
        <TextBox Width="350" HorizontalAlignment="Left" Margin="50, 10 ,0 ,0"/>
        <TextBlock Text="Password:" HorizontalAlignment="Left" Margin="50, 20, 0, 0" FontFamily="Segoe UI Bold"/>
        <TextBox Width="350" HorizontalAlignment="Left" Margin="50, 10 ,0 ,0"/>
        <Button Content="Sign in" HorizontalAlignment="Center" Width="120" Height="50" Margin="0, 25, 0, 0" FontFamily="Segoe UI Bold" Background="#568259" Foreground="White" FontSize="20">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Page>
